<Window x:Class="DevSecurityGuard.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DevSecurityGuard" 
        Height="580" 
        Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F3F3F3"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Window.Resources>
        <!-- Gradients -->
        <LinearGradientBrush x:Key="ShieldGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0078D4" Offset="0"/>
            <GradientStop Color="#00B4D8" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="WebButtonGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#0078D4" Offset="0"/>
            <GradientStop Color="#00B4D8" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="DesktopButtonGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#606060" Offset="0"/>
            <GradientStop Color="#808080" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="CardShadow" 
                         Color="Black" 
                         Opacity="0.15" 
                         BlurRadius="20" 
                         ShadowDepth="2"/>
    </Window.Resources>
    
    <Border Background="White" CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect Color="Black" Opacity="0.25" BlurRadius="30" ShadowDepth="0"/>
        </Border.Effect>
        
        <Grid>
            <Border Background="#FAFAFA" CornerRadius="12" Margin="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,40,0,30" HorizontalAlignment="Center">
                        <!-- Shield Icon -->
                        <Canvas Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Path Fill="{StaticResource ShieldGradient}" 
                                  Data="M40,10 L70,25 L70,45 C70,60 55,70 40,75 C25,70 10,60 10,45 L10,25 Z">
                                <Path.Effect>
                                    <DropShadowEffect Color="#0078D4" Opacity="0.3" BlurRadius="15"/>
                                </Path.Effect>
                            </Path>
                            <Path Stroke="White" StrokeThickness="4"
                                  Data="M28,42 L36,50 L52,34"/>
                        </Canvas>
                        
                        <TextBlock Text="DevSecurityGuard" 
                                  FontSize="32" 
                                  FontWeight="SemiBold"
                                  Foreground="#202020"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Protección de seguridad para desarrolladores" 
                                  FontSize="14" 
                                  Foreground="#606060"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Selection Cards -->
                    <Grid Grid.Row="1" Margin="60,0,60,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Web Card -->
                        <Border Grid.Column="0"
                               Background="White"
                               CornerRadius="12"
                               Effect="{StaticResource CardShadow}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="20,30,20,20">
                                    <!-- Globe Icon - LARGER with Viewbox -->
                                    <Viewbox Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,20">
                                        <Canvas Width="64" Height="64">
<Ellipse Width="64" Height="64" Stroke="#0078D4" StrokeThickness="3"/>
                                            <Path Stroke="#0078D4" StrokeThickness="2"
                                                  Data="M32,0 L32,64 M0,32 L64,32"/>
                                            <Path Stroke="#0078D4" StrokeThickness="2"
                                                  Data="M32,0 C 20,10 20,54 32,64 C 44,54 44,10 32,0"/>
                                        </Canvas>
                                    </Viewbox>
                                    
                                    <TextBlock Text="Web Browser" 
                                              FontSize="22" 
                                              FontWeight="SemiBold"
                                              Foreground="#202020"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="Interfaz moderna y rápida" 
                                              FontSize="13" 
                                              Foreground="#606060"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"
                                              TextAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Gaming Style Button -->
                                <Border Grid.Row="1" 
                                       x:Name="WebButton"
                                       Background="{StaticResource WebButtonGradient}"
                                       CornerRadius="0,0,12,12"
                                       Cursor="Hand"
                                       MouseEnter="WebButton_MouseEnter"
                                       MouseLeave="WebButton_MouseLeave"
                                       MouseLeftButtonDown="WebButton_Click">
                                    <Grid Height="50">
                                        <TextBlock Text="LAUNCH WEB" 
                                                  FontSize="14" 
                                                  FontWeight="Bold"
                                                  Foreground="White"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                                        <Border Background="#0078D4" 
                                               CornerRadius="4" 
                                               Padding="8,3"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,-12,10,0">
                                            <TextBlock Text="RECOMMENDED" 
                                                      FontSize="9" 
                                                      Foreground="White"
                                                      FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Desktop Card -->
                        <Border Grid.Column="2"
                               Background="White"
                               BorderBrush="#E0E0E0"
                               BorderThickness="2"
                               CornerRadius="12"
                               Effect="{StaticResource CardShadow}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <StackPanel Grid.Row="0" VerticalAlignment="Center" Margin="20,30,20,20">
                                    <!-- Monitor Icon - LARGER with Viewbox -->
                                    <Viewbox Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,20">
                                        <Canvas Width="64" Height="64">
                                            <Rectangle Width="56" Height="40" Canvas.Left="4" Canvas.Top="2"
                                                      Stroke="#606060" StrokeThickness="3" RadiusX="2" RadiusY="2"/>
                                            <Rectangle Width="30" Height="4" Canvas.Left="17" Canvas.Top="46"
                                                      Fill="#606060"/>
                                            <Rectangle Width="40" Height="3" Canvas.Left="12" Canvas.Top="50"
                                                      Fill="#606060"/>
                                        </Canvas>
                                    </Viewbox>
                                    
                                    <TextBlock Text="Desktop App" 
                                              FontSize="22" 
                                              FontWeight="SemiBold"
                                              Foreground="#202020"
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,5"/>
                                    <TextBlock Text="Aplicación nativa de Windows" 
                                              FontSize="13" 
                                              Foreground="#606060"
                                              HorizontalAlignment="Center"
                                              TextWrapping="Wrap"
                                              TextAlignment="Center"/>
                                </StackPanel>
                                
                                <!-- Gaming Style Button -->
                                <Border Grid.Row="1" 
                                       x:Name="DesktopButton"
                                       Background="{StaticResource DesktopButtonGradient}"
                                       CornerRadius="0,0,12,12"
                                       Cursor="Hand"
                                       MouseEnter="DesktopButton_MouseEnter"
                                       MouseLeave="DesktopButton_MouseLeave"
                                       MouseLeftButtonDown="DesktopButton_Click">
                                    <TextBlock Text="LAUNCH DESKTOP" 
                                              FontSize="14" 
                                              FontWeight="Bold"
                                              Foreground="White"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Height="50"
                                              Padding="0,15,0,0"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Footer -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,30" HorizontalAlignment="Center">
                        <!-- Light Theme Checkbox -->
                        <Border Background="White" 
                               CornerRadius="8" 
                               Padding="15,12"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1"
                               Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="RememberChoiceCheckBox"
                                         VerticalAlignment="Center"
                                         Margin="0,0,10,0">
                                    <CheckBox.Resources>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="CheckBox">
                                                        <Grid>
                                                            <Border x:Name="CheckBoxBorder"
                                                                   Width="20" Height="20"
                                                                   Background="White"
                                                                   BorderBrush="#0078D4"
                                                                   BorderThickness="2"
                                                                   CornerRadius="4">
                                                                <Path x:Name="CheckMark"
                                                                     Data="M 0,5 L 4,9 L 10,0"
                                                                     Stroke="White"
                                                                     StrokeThickness="2"
                                                                     Visibility="Collapsed"
                                                                     Margin="3"/>
                                                            </Border>
                                                        </Grid>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                                                <Setter TargetName="CheckBoxBorder" Property="Background" Value="#0078D4"/>
                                                            </Trigger>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter TargetName="CheckBoxBorder" Property="BorderBrush" Value="#00B4D8"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </CheckBox.Resources>
                                </CheckBox>
                                <TextBlock Text="Recordar mi elección"
                                          Foreground="#404040"
                                          FontSize="13"
                                          VerticalAlignment="Center"
                                          FontWeight="Normal"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock x:Name="StatusText"
                                  Text="Iniciando servidor API..."
                                  Foreground="#808080"
                                  FontSize="13"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="v1.0.0"
                                  Foreground="#B0B0B0"
                                  FontSize="11"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
