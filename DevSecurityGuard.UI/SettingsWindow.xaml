<Window x:Class="DevSecurityGuard.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        Foreground="White">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Configuration" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- General Settings -->
                <GroupBox Header="General">
                    <StackPanel>
                        <CheckBox Content="Start with Windows" IsChecked="True"/>
                        <CheckBox Content="Minimize to System Tray" IsChecked="True"/>
                        <CheckBox Content="Check for updates automatically" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Protection Settings -->
                <GroupBox Header="Protection">
                    <StackPanel>
                        <TextBlock Text="Intervention Mode:" Margin="0,0,0,5"/>
                        <ComboBox SelectedIndex="1" Margin="0,0,0,10" Width="200" HorizontalAlignment="Left">
                            <ComboBoxItem Content="Automatic (Block Threats)"/>
                            <ComboBoxItem Content="Interactive (Ask User)"/>
                            <ComboBoxItem Content="Alert Only (Log Only)"/>
                        </ComboBox>

                        <CheckBox Content="Enable Real-time Monitoring" IsChecked="True"/>
                        <CheckBox Content="Scan Dependencies on Install" IsChecked="True"/>
                        <CheckBox Content="Block Malicious Scripts" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>

                <!-- Privacy -->
                <GroupBox Header="Privacy">
                    <StackPanel>
                        <CheckBox Content="Send Anonymous Statistics" IsChecked="False"/>
                        <CheckBox Content="Allow Community Threat Feed Sync" IsChecked="True"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0" Click="Save_Click" Background="#0078D4" Foreground="White" BorderThickness="0"/>
            <Button Content="Cancel" Width="80" Height="30" Click="Cancel_Click" Background="#333333" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
